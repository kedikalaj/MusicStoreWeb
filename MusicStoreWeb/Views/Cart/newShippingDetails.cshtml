@model MusicStore.Domain.Entities.ShippingDetail
@using MusicStore.Domain.Entities;

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>


@using (Html.BeginForm("newShippingDetails", "Cart", FormMethod.Post))
{
    string value = "";

    if (Request.Cookies["fatcookie"] != null)
    {
        string value2 = Request.Cookies["fatcookie"]["username"];
        value = value2;

    }


    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>

        @value
    </div>

    <h3>Address</h3>


    <div class="form-group">
        <label>Line1</label>
        @Html.TextBoxFor(model => model.Name, new { @Value = value, @type = "hidden" })
    </div>


    <div class="form-group">
        <label>Line1</label>
        @Html.TextBoxFor(model => model.Line1, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Line2</label>
        @Html.TextBoxFor(model => model.Line2, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Line3</label>
        @Html.TextBoxFor(model => model.Line3, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(model => model.City, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>State</label>
        @Html.TextBoxFor(model => model.State, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>zip</label>
        @Html.TextBoxFor(model => model.Zip, null, new { @class = "form-control" })
    </div> <div class="form-group">
        <label>Country</label>
        @Html.TextBoxFor(model => model.Country, null, new { @class = "form-control" })
    </div>



    <h3>Options</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.GiftWrap)
            Gift wrap these items
        </label>
    </div>

    <div class="text-center">

        <a href="/">
            <input class="btn btn-primary" type="submit" value="Complete order" />
        </a>
    </div>


}