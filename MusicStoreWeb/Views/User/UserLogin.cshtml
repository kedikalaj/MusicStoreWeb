@model MusicStore.Domain.Models.LoginModel

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel">
    <div class="panel-heading">
        <h3> Log In</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Log In or sign Up</p>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>User Name:</label>
                @Html.TextBoxFor(m => m.user.Username, new { @class = "form-control form-control-sm" })
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(m => m.user.Password, new { @class = "form-control form-control-sm" })
            </div>
            <input type="submit" value="Log in" class="btn btn-primary" />
        }
    </div>
</div>

<div>
    <a href="/"
       id="current">back to brasil</a>
</div>
